<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
</head>
<body>
    <%- include('../partials/header') %>

<h1><%= title %></h1>
<ul>
    <% genres.forEach(genre => { %>
        <li>
            <%= genre.name %>
            <form action="/genres/<%= genre.id %>/delete" method="POST" style="display:inline">
                <button type="submit">Delete</button>
            </form>
            <a href="/genres/<%= genre.id %>">View Books</a>
        </li>
    <% }) %>
</ul>

<a href="/genres/new">Add a new genre</a>

<%- include('../partials/footer') %>


</body>
</html>